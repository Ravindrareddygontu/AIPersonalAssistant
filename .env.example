# =============================================================================
# AI Chat App - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# OpenAI Configuration (for Whisper speech-to-text)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# MongoDB Configuration
# =============================================================================
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=ai_chat_app

# =============================================================================
# Slack Integration
# =============================================================================
# Get these from https://api.slack.com/apps → Your App

# Bot User OAuth Token (required)
# OAuth & Permissions → Bot User OAuth Token
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# App-Level Token (required for Socket Mode)
# Basic Information → App-Level Tokens → Create with connections:write scope
SLACK_APP_TOKEN=xapp-your-app-token-here

# Signing Secret (required for HTTP webhook mode)
# Basic Information → App Credentials → Signing Secret
SLACK_SIGNING_SECRET=your-signing-secret-here

# Incoming Webhook URL (for notifications only)
# Incoming Webhooks → Add New Webhook to Workspace
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ

# Channel ID (required for poller mode only)
# Right-click channel → View channel details → Copy ID at bottom
SLACK_CHANNEL_ID=C1234567890

# Default workspace path for Slack commands
SLACK_WORKSPACE=~/Projects/POC'S/ai-chat-app

# Default AI model for Slack commands
SLACK_MODEL=claude-opus-4.5

# Enable Slack bot on app startup (true/false)
SLACK_ENABLED=false

# Slack integration mode: socket, poller, or http
SLACK_MODE=socket

